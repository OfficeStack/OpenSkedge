{% extends 'OpenSkedgeBundle:Dashboard:index.html.twig' %}
{% block title %}{{ app_brand_name() }} - New Schedule Period{% endblock %}
{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('css/datepicker.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block javascripts %}
<script type="text/javascript" src="{{ asset('js/bootstrap.datepicker.js') }}"></script>
<script type="text/javascript">
$('#schedulePeriodStart').datepicker({ format: 'mm-dd-yyyy', autoclose: true });
$('#schedulePeriodEnd').datepicker({ format: 'mm-dd-yyyy', autoclose: true });
</script>
{% endblock %}
{% block modulecontent %}
<div class="span12">
    <ul class="breadcrumb">
        <li><a href="{{ path('schedule_periods') }}">Schedule Periods</a> <span class="divider">/</span></li>
        <li class="active">Create a New Schedule Period</li>
    </ul>
    <h3>Create a New Schedule Period</h3>
    <form action="{{ path('schedule_period_new') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        {{ form_label(form.startTime) }}
        <div class="input-append date" id="schedulePeriodStart">
            {{ form_widget(form.startTime) }}
            <span class="add-on"><i class="icon-calendar"></i></span>
        </div>
        {{ form_label(form.endTime) }}
        <div class="input-append date" id="schedulePeriodEnd">
            {{ form_widget(form.endTime) }}
            <span class="add-on"><i class="icon-calendar"></i></span>
        </div>
        {{ form_rest(form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create Schedule Period</button>
            <a class="btn" href="{{ path('schedule_periods') }}">Back to Schedule Periods</a>
        </div>
    </form>
</div>
{% endblock %}
